{
  "name": "node-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "clean": "rm -rf node_modules",
    "dev": "tsx watch --clear-screen=false --env-file=.env src/initServer.ts",
    "build": "node build.config.mjs",
    "start": "node --env-file=.env dist/index.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier . --check --config .prettierrc.mjs --ignore-path .prettierignore",
    "format:biome": "biome format ./src",
    "format:biome:fix": "biome format --verbose ./src --write",
    "tsc": "tsc -p tsconfig.json",
    "test": "jest",
    "benchmark": "node --env-file=.env --import tsx benchmark/benchmark.ts",
    "benchmark:quick": "concurrently -k -s first \"node --env-file=.env --import tsx src/initServer.ts\" \"npx autocannon -c 100 -d 5 -p 10 http://localhost:8000/api/health-check\"",
    "k6:smoke": "k6 run benchmark/k6/smoke-test.js",
    "k6:load": "k6 run benchmark/k6/load-test.js",
    "k6:stress": "k6 run benchmark/k6/stress-test.js",
    "k6:health": "k6 run benchmark/k6/health-check.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "api-opener": "^2.0.1",
    "color-my-json": "^0.0.9",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.0",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/js": "^9.39.1",
    "@types/autocannon": "^7.12.7",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/k6": "^1.4.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "autocannon": "^8.0.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "express": "^5.2.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jsonc-parser": "^3.3.1",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "packageManager": "pnpm@10.24.0"
}
