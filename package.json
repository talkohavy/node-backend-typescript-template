{
  "name": "node-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "clean": "rm -rf node_modules",
    "dev": "node --import tsx --watch --env-file=.env src/initServer/monolith/initServer.ts",
    "dev:auth": "node --import tsx --watch --env-file=.env.micro-services src/initServer/micro-services/authentication/authentication.init-server.ts",
    "dev:backend": "node --import tsx --watch --env-file=.env.micro-services src/initServer/micro-services/backend/backend.init-server.ts",
    "dev:books": "node --import tsx --watch --env-file=.env.micro-services src/initServer/micro-services/books/books.init-server.ts",
    "dev:dragons": "node --import tsx --watch --env-file=.env.micro-services src/initServer/micro-services/dragons/dragons.init-server.ts",
    "dev:file-upload": "node --import tsx --watch --env-file=.env.micro-services src/initServer/micro-services/file-upload/file-upload.init-server.ts",
    "dev:users": "node --import tsx --watch --env-file=.env.micro-services src/initServer/micro-services/users/users.init-server.ts",
    "dev:all": "./toolbox/init-micro-services.sh",
    "build": "node build.config.mjs",
    "start": "node --env-file=.env dist/index.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier . --check --config .prettierrc.mjs --ignore-path .prettierignore",
    "format:biome": "biome format ./src",
    "format:biome:fix": "biome format --verbose ./src --write",
    "tsc": "tsc -p tsconfig.json",
    "test": "jest",
    "benchmark": "node --env-file=.env --import tsx benchmark/benchmark.ts",
    "benchmark:quick": "concurrently -k -s first \"node --env-file=.env --import tsx src/initServer.ts\" \"npx autocannon -c 100 -d 5 -p 10 http://localhost:8000/api/health-check\"",
    "k6:smoke": "k6 run benchmark/k6/smoke-test.js",
    "k6:load": "k6 run benchmark/k6/load-test.js",
    "k6:stress": "k6 run benchmark/k6/stress-test.js",
    "k6:health": "k6 run benchmark/k6/health-check.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "api-opener": "^2.0.1",
    "color-my-json": "^0.0.9",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csv-parse": "^6.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "pg": "^8.17.2",
    "redis": "^5.10.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@eslint/js": "^9.39.2",
    "@types/autocannon": "^7.12.7",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/k6": "^1.5.0",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "autocannon": "^8.0.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^5.4.0",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "express": "^5.2.1",
    "globals": "^17.1.0",
    "jest": "^30.2.0",
    "jsonc-parser": "^3.3.1",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "packageManager": "pnpm@10.28.1"
}
